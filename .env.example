# Podhome MCP Server Environment Variables
# Copy this file to .env and fill in your actual values

# Required - Podhome API
PODHOME_API_KEY=your_podhome_api_key_here

# Required - Cloudflare R2
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_R2_ACCESS_KEY_ID=your_r2_access_key_id
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_r2_secret_access_key

# Optional - Podhome API base URL (defaults to https://api.podhome.fm)
# PODHOME_BASE_URL=https://api.podhome.fm

# Optional - R2 custom domain (recommended)
# R2_PUBLIC_DOMAIN=cdn.yourpodcast.com

# Optional - HTTP server mode (if set, runs HTTP server instead of stdio)
# MCP_PORT=3003
# MCP_HOST=127.0.0.1

# Optional - Logging level (debug, info, warn, error)
# LOG_LEVEL=info
